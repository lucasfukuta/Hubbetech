@page "/links"
@using Hubbetech.Shared.Dtos
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@inject HttpClient Http
@inject IJSRuntime JSRuntime

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="fw-bold text-primary">Links da Empresa</h3>
            <p class="text-muted">Acesso rápido aos recursos da empresa</p>
        </div>
        <button class="btn btn-primary btn-lg shadow-sm" @onclick="() => OpenModal()">
            <i class="bi bi-plus-lg me-2"></i>Novo Link
        </button>
    </div>

    <div class="mb-4">
        <div class="input-group">
            <span class="input-group-text bg-white border-end-0"><i class="bi bi-search text-muted"></i></span>
            <input type="text" class="form-control border-start-0 ps-0" placeholder="Buscar links..." @bind="searchTerm" @bind:event="oninput" />
        </div>
    </div>

    @if (filteredLinks == null)
    {
        <div class="d-flex justify-content-center align-items-center" style="height: 50vh;">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Carregando...</span>
            </div>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var link in filteredLinks)
            {
                <div class="col-md-6">
                    <div class="card h-100 border-0 shadow-sm hover-shadow transition-all">
                        <div class="card-body d-flex align-items-center">
                            <div class="icon-box bg-light text-primary rounded-3 p-3 me-3">
                                <i class="bi bi-link-45deg fs-4"></i>
                            </div>
                            <div class="flex-grow-1">
                                <h5 class="card-title fw-bold mb-1">@link.Title</h5>
                                <a href="@link.Url" target="_blank" class="text-muted small text-decoration-none hover-link">@link.Url</a>
                            </div>
                             <div class="dropdown ms-2">
                                <button class="btn btn-link text-muted p-0" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-three-dots"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" href="javascript:void(0)" @onclick="() => OpenModal(link)">Editar</a></li>
                                    <li><a class="dropdown-item text-danger" href="javascript:void(0)" @onclick="() => DeleteLink(link.Id)">Excluir</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<!-- Modal -->
@if (showModal)
{
    <div class="modal fade show d-block" style="background-color: rgba(0,0,0,0.5);" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow-lg">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">@(editingLink.Id == 0 ? "Novo Link" : "Editar Link")</h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="CloseModal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Título</label>
                        <input type="text" class="form-control" @bind="editingLink.Title" placeholder="Ex: Drive de Projetos" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">URL</label>
                        <input type="text" class="form-control" @bind="editingLink.Url" placeholder="Ex: https://drive.google.com..." />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseModal">Cancelar</button>
                    <button type="button" class="btn btn-primary" @onclick="SaveLink">Salvar</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<LinkEmpresaDto>? links;
    private string searchTerm = "";
    private bool showModal = false;
    private LinkEmpresaDto editingLink = new();

    private IEnumerable<LinkEmpresaDto>? filteredLinks => 
        links?.Where(l => string.IsNullOrEmpty(searchTerm) || 
                          l.Title.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) || 
                          l.Url.Contains(searchTerm, StringComparison.OrdinalIgnoreCase));

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        try
        {
            links = await Http.GetFromJsonAsync<List<LinkEmpresaDto>>("api/linksempresa");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Erro: {ex.Message}");
        }
    }

    private void OpenModal(LinkEmpresaDto? link = null)
    {
        if (link != null)
        {
            editingLink = new LinkEmpresaDto
            {
                Id = link.Id,
                Title = link.Title,
                Url = link.Url
            };
        }
        else
        {
            editingLink = new LinkEmpresaDto();
        }
        showModal = true;
    }

    private void CloseModal()
    {
        showModal = false;
    }

    private async Task SaveLink()
    {
        if (editingLink.Id == 0)
        {
            await Http.PostAsJsonAsync("api/linksempresa", editingLink);
        }
        else
        {
            await Http.PutAsJsonAsync($"api/linksempresa/{editingLink.Id}", editingLink);
        }
        showModal = false;
        await LoadData();
    }

    private async Task DeleteLink(int id)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", "Tem certeza que deseja excluir?"))
        {
            await Http.DeleteAsync($"api/linksempresa/{id}");
            await LoadData();
        }
    }
}
