<!-- Modal -->
@if (showModal)
{
    <div class="modal fade show d-block" style="background-color: rgba(0,0,0,0.5);" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow-lg">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">@(editingDemanda.Id == 0 ? "Nova Tarefa" : "Editar Tarefa")</h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="CloseModal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Título</label>
                        <input type="text" class="form-control" @bind="editingDemanda.Title" placeholder="Ex: Preparar relatório mensal" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Descrição</label>
                        <textarea class="form-control" @bind="editingDemanda.Description" rows="3" placeholder="Detalhes da tarefa..."></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Status</label>
                        <select class="form-select" @bind="editingDemanda.Status">
                            <option value="@StatusDemanda.AFazer">A Fazer</option>
                            <option value="@StatusDemanda.Fazendo">Em Progresso</option>
                            <option value="@StatusDemanda.EmRevisao">Em Revisão</option>
                            <option value="@StatusDemanda.Feito">Concluído</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseModal">Cancelar</button>
                    <button type="button" class="btn btn-primary" @onclick="SaveDemanda">Salvar</button>
                </div>
            </div>
        </div>
    </div>
}

<style>
    .dot {
        width: 8px;
        height: 8px;
        border-radius: 50%;
        display: inline-block;
    }
    .kanban-card {
        transition: transform 0.2s, box-shadow 0.2s;
        cursor: grab;
        border-radius: 12px;
    }
    .kanban-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.15)!important;
    }
    .stats-card {
        border-radius: 12px;
    }
    .icon-box {
        width: 48px;
        height: 48px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>

@code {
    private List<DemandaDto>? demandas;
    private bool showModal = false;
    private DemandaDto editingDemanda = new();
    private string userName = "Usuário";

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        if (user.Identity?.IsAuthenticated ?? false)
        {
            userName = user.Identity.Name ?? "Usuário";
        }
        await LoadData();
    }

    private async Task LoadData()
    {
        try
        {
            demandas = await Http.GetFromJsonAsync<List<DemandaDto>>("api/demandas");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Erro: {ex.Message}");
        }
    }

    private void OpenModal(DemandaDto? demanda = null)
    {
        if (demanda != null)
        {
            editingDemanda = new DemandaDto
            {
                Id = demanda.Id,
                Title = demanda.Title,
                Description = demanda.Description,
                Status = demanda.Status,
                AssignedToUserId = demanda.AssignedToUserId
            };
        }
        else
        {
            editingDemanda = new DemandaDto { Status = StatusDemanda.AFazer };
        }
        showModal = true;
    }

    private void CloseModal()
    {
        showModal = false;
    }

    private async Task SaveDemanda()
    {
        if (editingDemanda.Id == 0)
        {
            await Http.PostAsJsonAsync("api/demandas", editingDemanda);
        }
        else
        {
            await Http.PutAsJsonAsync($"api/demandas/{editingDemanda.Id}", editingDemanda);
        }
        showModal = false;
        await LoadData();
    }

    private async Task DeleteDemanda(int id)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", "Tem certeza que deseja excluir?"))
        {
            await Http.DeleteAsync($"api/demandas/{id}");
            await LoadData();
        }
    }

    private DemandaDto? draggedDemanda;

    private void HandleDragStart(DemandaDto demanda)
    {
        draggedDemanda = demanda;
    }

    private async Task HandleDrop(StatusDemanda newStatus)
    {
        if (draggedDemanda != null && draggedDemanda.Status != newStatus)
        {
            await MoveDemanda(draggedDemanda, newStatus);
            draggedDemanda = null;
        }
    }

    private async Task MoveDemanda(DemandaDto demanda, StatusDemanda newStatus)
    {
        demanda.Status = newStatus;
        await Http.PutAsJsonAsync($"api/demandas/{demanda.Id}", demanda);
        await LoadData();
    }
}